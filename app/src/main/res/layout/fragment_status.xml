<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Toolbar - Start-->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/chevron_left"/>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leaderboard"
            android:textAppearance="@style/toolbar_title"
            android:textColor="@null"
            android:textSize="24sp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lato_bold"
            />
    </RelativeLayout>
    <!--Toolbar - End-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginHorizontal="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <!--1st Rank - Start-->
            <RelativeLayout
                android:id="@+id/relative_1strank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/imgview_1st"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/crown"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img1"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:padding="6dp"
                    android:layout_below="@+id/imgview_1st"
                    android:src="@mipmap/ic_launcher" />

                <com.devlomi.circularstatusview.CircularStatusView
                    android:id="@+id/circular_status_view"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_below="@+id/imgview_1st"
                    android:layout_centerHorizontal="true"
                    app:portion_color="#FFD700"
                    app:portion_spacing="4dp"
                    app:portion_width="4dp"
                    app:portions_count="4" />
            </RelativeLayout>
            <!--1st Rank - End -->

            <!--2st Rank - Start-->
            <RelativeLayout
                android:id="@+id/relative_2ndrank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_1strank"
                android:layout_toStartOf="@id/relative_1strank"
                android:layout_marginEnd="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img2"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:padding="6dp"
                    android:src="@mipmap/ic_launcher" />

                <com.devlomi.circularstatusview.CircularStatusView
                    android:id="@+id/csv_2"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    app:portion_color="#C0C0C0"
                    app:portion_spacing="4dp"
                    app:portion_width="4dp"
                    app:portions_count="4" />
            </RelativeLayout>
            <!--2st Rank - End -->

            <!--3st Rank - Start-->
            <RelativeLayout
                android:id="@+id/relative_3rdrank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_1strank"
                android:layout_toEndOf="@id/relative_1strank"
                android:layout_marginStart="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img3"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:padding="6dp"
                    android:src="@mipmap/ic_launcher" />

                <com.devlomi.circularstatusview.CircularStatusView
                    android:id="@+id/csv_3"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    app:portion_color="#CD7F32"
                    app:portion_spacing="4dp"
                    app:portion_width="4dp"
                    app:portions_count="4" />
            </RelativeLayout>

            <!--2st Rank - End -->

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>