<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/category_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"
        >

        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right"
            android:visibility="gone"
            android:background="@null"/>

        <ImageView
            android:id="@+id/cc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="-10dp"
            android:src="@drawable/circle_logo_ss"
            android:layout_toEndOf="@+id/arrow_back"/>

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cc"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:visibility="visible"
            tools:visibility="visible"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="1sp"
            android:text="ircle"
            android:layout_marginStart="-15dp"
            android:textAppearance="@style/toolbar_title"
            android:textColor="@null"
            android:textSize="30sp"
            />

        <ImageButton
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/notification_icon_24"
            android:backgroundTint="@color/dark_fade_color"
            android:background="?selectableItemBackground"
            android:layout_toStartOf="@id/manage_list"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageButton
            android:id="@+id/manage_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/edit_category_icon"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/dark_fade_color"
            android:background="?selectableItemBackground"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:visibility="visible" />


